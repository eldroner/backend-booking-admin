{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "plugins": [{
      "name": "@angular/compiler-cli",
      "strictTemplates": true,
      "enableIvy": true
    }]
  },
  "include": ["src/**/*.ts"], // ‚Üê Limitar a la carpeta src
  "exclude": ["node_modules"]
}